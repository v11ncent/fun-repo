---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="news-banner">
  <div class="container">
    <p class="center">{text}</p>
  </div>
</div>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  .container {
    position: relative;
    bottom: 0;
    padding: 1.5rem;
    text-align: center;
    font-size: clamp(0.625rem, 0.625rem + 0.5vw, 1.125rem);
    background: center / cover url("../assets/paper-background.webp") t.$clr-tan;
    box-shadow: t.$s-main;

    p {
      max-width: 100%;
      color: black; /* Specificity */
    }
  }

  .container::before,
  .container::after {
    position: absolute;
    content: "";
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    max-height: 2rem;
  }

  .container::before {
    top: 0;
    transform: translate(0, -95%);
    background: center / cover no-repeat url("../assets/paper.webp");
  }

  .container::after {
    bottom: 0;
    background: center / cover no-repeat url("../assets/paper.webp");
    transform: translate(0, 95%) rotate(180deg);
  }
</style>
